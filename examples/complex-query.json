{
  "from": "orders",
  "select": [
    "id",
    "order_number",
    { "field": "created_at", "as": "createdAt" }
  ],
  "where": {
    "and": [
      { "field": "company_id", "op": "=", "value": 10 },
      {
        "or": [
          { "field": "status", "op": "=", "value": "PAID" },
          { "field": "status", "op": "=", "value": "SHIPPED" }
        ]
      },
      { "field": "created_at", "op": "between", "value": ["2026-01-01", "2026-01-31"] }
    ]
  },
  "include": {
    "customer": {
      "select": ["id", "name"]
    }
  },
  "order_by": [
    { "field": "created_at", "dir": "desc" }
  ],
  "limit": 25
}
